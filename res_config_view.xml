<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- After installation of the module, open the related menu -->
        <record id="action_client_hybrid_menu" model="ir.actions.client">
            <field name="name">Open HR Menu</field>
            <field name="tag">reload</field>
            <field name="params" eval="{'menu_id': ref('menu_hybrid_root')}"/>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_client_hybrid_menu"/>
            <field name="state">open</field>
        </record>
    </data>
    <data>
        <record id="open_payroll_modules" model="ir.actions.act_window">
            <field name="name">Payroll</field>
            <field name="res_model">ir.module.module</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context" eval="{'search_default_category_id': ref('base.module_category_localization')}"/>
            <field name="search_view_id" ref="base.view_module_filter"/>
        </record>

        <record id="view_hybrid_cloud_configuration" model="ir.ui.view">
            <field name="name">hybrid settings</field>
            <field name="model">hybrid.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Hybrid Cloud" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="Hybrid Cloud Management"/>
                    <group name="recruitment_grp">
                        <label for="id" string="Talent Management"/>
                        <div name="recruitment">
                            <div name="hybrid_recruitment">
                                <field name="module_hybrid_recruitment" class="oe_inline"/>
                                <label for="module_hybrid_recruitment"/>
                            </div>
                            <div>
                                <field name="module_hybrid_evaluation" class="oe_inline"/>
                                <label for="module_hybrid_evaluation"/>
                            </div>
                        </div>
                    </group>
                    <group>
                        <label for="id" string="Additional Features"/>
                        <div>
                            <div>
                                <field name="module_hybrid_holidays" class="oe_inline"/>
                                <label for="module_hybrid_holidays"/>
                            </div>
                            <div>
                                <field name="module_hybrid_expense" class="oe_inline"/>
                                <label for="module_hybrid_expense"/>
                            </div>
                            <div>
                                <field name="module_hybrid_gamification" class="oe_inline"/>
                                <label for="module_hybrid_gamification"/>
                            </div>
                        </div>
                    </group>
                    <group name="timesheet_grp">
                        <label for="id" string="Time Tracking"/>
                        <div>
                            <div>
                                <field name="module_hybrid_timesheet" on_change="onchange_hybrid_timesheet(module_hybrid_timesheet)" class="oe_inline"/>
                                <label for="module_hybrid_timesheet"/>
                            </div>
                            <div name="hybrid_timesheet">
                                <field name="module_hybrid_timesheet_sheet" class="oe_inline"/>
                                <label for="module_hybrid_timesheet_sheet"/>
                            </div>
                            <div name="account_analytic_analysis">
                                <field name="module_account_analytic_analysis" class="oe_inline"/>
                                <label for="module_account_analytic_analysis"/>
                            </div>
                            <div name="hybrid_attendance">
                                <field name="module_hybrid_attendance" on_change="onchange_hybrid_attendance(module_hybrid_attendance)" class="oe_inline"/>
                                <label for="module_hybrid_attendance"/>
                            </div>
                        </div>
                    </group>
                    <group name="contract_grp">
                        <label for="id" string="Contracts"/>
                        <div>
                            <div>
                                <field name="module_hybrid_contract" class="oe_inline"/>
                                <label for="module_hybrid_contract"/>
                            </div>
                            <div name="hybrid_payroll">
                                <field name="module_hybrid_payroll" class="oe_inline"/>
                                <label for="module_hybrid_payroll"/>
                                <button name="%(open_payroll_modules)d" type="action"
                                    string="Install your country's payroll" icon="gtk-go-forward"
                                    attrs="{'invisible': [('module_hybrid_payroll','=',False)]}" class="oe_link"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_hybrid_cloud_configuration" model="ir.actions.act_window">
            <field name="name">Configure Hybrid Cloud</field>
            <field name="res_model">hybrid.config.settings</field>
            <field name="view_id" ref="view_hybrid_cloud_configuration"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_hybrid_cloud_configuration" name="Hybrid Cloud" parent="base.menu_config"
            sequence="15" action="action_hybrid_cloud_configuration"/>

    </data>
</openerp>
